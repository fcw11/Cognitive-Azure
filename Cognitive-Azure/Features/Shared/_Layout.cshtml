<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>@if (ViewData.ContainsKey("PageTitle")) { @ViewData["PageTitle"] } else { <text>Cognitive Azure</text> } </title>
        
        <environment include="Development">
            <link href="/css/bootstrap.css" rel="stylesheet" />
            <link href="/css/bootstrap-grid.css" rel="stylesheet" />
            <link href="/css/bootstrap-reboot.css" rel="stylesheet" />
            <link href="/css/site.css" rel="stylesheet" />
        </environment>
        <environment exclude="Development">
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link href="/css/site.min.css" rel="stylesheet" />
        </environment>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Images">Cognitive Azure</a>
                <div>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">

                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="mailto:paul@pbreen.co.uk">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/paulbreen/Cognitive-Azure">
                                <svg width="32" height="32" class="github-icon" viewBox="0 0 16 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div class="container main-container">
            @RenderBody()
        </div>

        <footer class="bd-footer text-muted">
            <div class="container-fluid p-1 p-md-1 text-align-center">
                <ul class="bd-footer-links">
                    <li><a href="//twitter.com/paulbreen" target="_blank">Twitter</a></li>
                    <li><a href="mailto:paul@pbreen.co.uk">Contact</a></li>
                    <li><a asp-action="About" asp-controller="Home">About</a></li>
                    <li><a href="https://github.com/paulbreen/Cognitive-Azure">GitHub</a></li>
                </ul>
            </div>
            <div class="container-fluid p-1 p-md-1 text-align-center">
                <a href="//pbreen.co.uk" target="_blank">Paul Breen </a> &copy; @DateTime.UtcNow.Year
            </div>
        </footer>
        <environment include="Development">
            <script src="/lib/jquery/dist/jquery.js"></script>
            <script src="/js/bootstrap.js"></script>

        </environment>
    <environment exclude="Development">
        <script src="//code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </environment>
    
    @RenderSection("Scripts", false) 
    
    </body>
</html>