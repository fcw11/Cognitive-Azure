@using Services.Entities.Audio
@model EnrollProfile

<form asp-controller="Audio" asp-action="EnrollProfile" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    <button id="startRecording">Start</button>

    <button id="stopRecording">Stop</button>

    <audio id="audioControls" controls=""><source id="audioSource" type="audio/webm"></audio>
    
    @Html.EditorFor(x => x.Audio) 

    <input type="submit" value="Submit"/>

</form>